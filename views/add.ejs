<%- include ./partiles/header.ejs  %>


<div class="w-full min-h-screen bg-zinc-800 px-10 py-5 text-white">
  <h1>Create New Post</h1>
  <hr class="opacity-10 mt-3">
 <div>
    <form action="/createpost" method="post" enctype="multipart/form-data">
        <input name="image" class="block  w-1/3 px-3 py-2" type="file" >
        <input name="title" class="block text-black w-1/3 px-3 py-2 border-2 mt-2  rounded-md" type="text" placeholder="Title">
        <textarea name="description" class="block text-black w-1/3 h-60 px-3 py-2 border-2 mt-2  rounded-md" type="text" placeholder="Description"> </textarea>
        <input class="block  w-1/3 px-3 py-2 mt-2 bg-red-700  rounded-md" type="submit" value="Create Post">
      </form>
 </div>
</div>


